{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "moduleResolution": "node",
        "incremental": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "target": "es2020",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020",
            "es2020.promise",
            "es2021.string",
            "dom"
        ]
    },
    "include": [
        "./**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}